#ifndef __S2DBASE_IO_INL__
#define __S2DBASE_IO_INL__

//--------------------------------------------------------------------------------------------------------
namespace s2d
{
//--------------------------------------------------------------------------------------------------------
// Char8( ANSI ):
//---------------------------------------------------------------------------------------------------------
// read a character from a stream 
inline Char8	getc( FILE* fp )
{
	return fgetc( fp );
}
//---------------------------------------------------------------------------------------------------------
// write a character to a stream 
inline s32		putc( Char8 c, FILE* fp )
{
	return putc( c, fp );
}
//--------------------------------------------------------------------------------------------------------
// Char16( UNICODE ):
//---------------------------------------------------------------------------------------------------------
// read a character from a stream 
inline Char16	getwc( FILE* fp )
{
	return fgetwc( fp );
}
//---------------------------------------------------------------------------------------------------------
// write a character to a stream 
inline s32		putwc( Char16 c, FILE* fp )
{
	return fputwc( c, fp );
}
//--------------------------------------------------------------------------------------------------------
};//namespace s2d
//--------------------------------------------------------------------------------------------------------

#endif//__S2DBASE_IO_INL__
